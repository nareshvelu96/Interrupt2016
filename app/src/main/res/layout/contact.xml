<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/custom_gradient_bg"
    android:orientation="vertical"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SRINIVASAN"
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                />
            <View
                android:layout_width="313dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FACULTY INCHARGE"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textSize="20sp" />
        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/call1"
            android:tint="#00c6ff"
            android:backgroundTint="#FFFFFF"
            android:layout_gravity="right"
            android:src="@mipmap/ic_ring_volume_white_36dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADITHYA M"
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                />
            <View
                android:layout_width="313dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRESIDENT"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textSize="20sp" />
        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/call2"
            android:tint="#00c6ff"
            android:backgroundTint="#FFFFFF"
            android:layout_gravity="right"
            android:src="@mipmap/ic_ring_volume_white_36dp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HARI SIDDHARTH"
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                />
            <View
                android:layout_width="313dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VICE PRESIDENT"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textSize="20sp" />
        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/call3"
            android:tint="#00c6ff"
            android:backgroundTint="#FFFFFF"
            android:layout_gravity="right"
            android:src="@mipmap/ic_ring_volume_white_36dp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view4"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THIRUVENKATAM"
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                />
            <View
                android:layout_width="313dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SECRETARY"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textSize="20sp" />
        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/call4"
            android:tint="#00c6ff"
            android:backgroundTint="#FFFFFF"
            android:layout_gravity="right"
            android:src="@mipmap/ic_ring_volume_white_36dp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_viewer"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_below="@id/card_view3"
        android:layout_height="135dp"
        android:layout_margin="5dp">
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <info.hoang8f.widget.FButton
                android:id="@+id/feedback"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="left|top"
                android:text="FEEDBACK"
                android:textColor="#FFFFFF"
                fbutton:buttonColor="#e75c5c"
                fbutton:shadowEnabled="true"
                android:textStyle="bold|italic"
                android:layout_margin="16dp"
                android:textSize="25dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true" />
            <info.hoang8f.widget.FButton
                android:id="@+id/back"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="left|top"
                android:text="FB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@id/feedback"
                android:textColor="#FFFFFF"
                fbutton:buttonColor="@color/colorPrimary"
                fbutton:shadowEnabled="true"
                android:textStyle="bold|italic"
                android:textSize="25dp"
                android:onClick="fb"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true" />


        </LinearLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>