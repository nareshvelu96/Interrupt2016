<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_card"
    tools:ignore="MissingPrefix"
android:padding="20dp"
    android:layout_gravity="center"
    android:gravity="center">
    <TextView
        fontPath="fonts/hamburger.TTF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Registration"
        android:textColor="@color/text_color"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginRight="20dp"/>
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MYB V3.0"
        android:textColor="@color/text_color"
        android:id="@+id/mybcb"/>
    <Switch
        android:layout_width="match_parent"
        android:textColor="@color/text_color"
        android:layout_height="wrap_content"
        android:text="Data Surfer"
        android:id="@+id/tabcb"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Dossier"
        android:id="@+id/syncb"
        android:textColor="@color/text_color"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Code Ninja"
        android:id="@+id/tricb"
        android:textColor="@color/text_color"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HintForage"
        android:id="@+id/bombcb"
        android:textColor="@color/text_color"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DumbC"
        android:id="@+id/dumbcb"
        android:textColor="@color/text_color"/>
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Papier Remise"
        android:id="@+id/paper"
        android:textColor="@color/text_color"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Code Fraternity"
        android:id="@+id/cfcb"
        android:textColor="@color/text_color"/>
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quizzler"
        android:id="@+id/thcb"
        android:textColor="@color/text_color"/>
    <Button
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:id="@+id/register"
        android:layout_height="wrap_content"
        android:text="Register"/>

</LinearLayout>
